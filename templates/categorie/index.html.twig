{% extends 'base.html.twig' %}

{% block title %}Nos Categories!{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
   <table class="table">
    <tr>
        <th>libelle</th>
        <th>description</th>
        <th colspan="3">Action</th>
    </tr>
    {% for categorie in categories %}
        <tr>
            <td>{{categorie.libelle}}</td>
            <td>{{categorie.description}}</td>
            <td><a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}" class="btn btn-primary btn-sm">Voir plus <span uk-icon="icon: info"></span></a></td>
            <td>
            <form action="{{ path('admin_categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
            <button type="submit" class="btn btn-danger btn-sm">Supprimer <span uk-icon="icon: trash"></span></button>
                </form>
            </td>
            <td><a href="{{ path('admin_categorie_update', {'id': categorie.id}) }}" class="btn btn-success btn-sm">Editer <span uk-icon="icon: pencil"></span></a></td>
        </tr>
    {% endfor %}
</table>
    <a href="{{ path('admin_categorie_create') }}" class="btn btn-primary btn-sm">Ajouter <span uk-icon="icon: plus-circle"></span></a>
{% endblock %}
