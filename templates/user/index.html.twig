{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
   <table class="table">
    <tr>
        <th>email</th>
        <th>role</th>
        <th>vérifier?</th>
        <th colspan="3">Action</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.email }}</td>
            <td>
                {% for role in user.roles %}
                    {{ role }}
                {% endfor %}
            </td>
            <td>{{ user.isVerified }}</td>
            <td><a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary btn-sm">Voir plus ....</a></td>
            <td>
                <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur?');">
                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
            <td><a href="{{ path('app_user_update', {'id': user.id}) }}" class="btn btn-success btn-sm">Editer</a></td>
        </tr>
    {% endfor %}
</table>
   
{% endblock %}
